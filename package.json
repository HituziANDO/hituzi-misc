{
  "name": "hituzi-misc",
  "version": "0.17.5",
  "description": "JavaScript & TypeScript misc library.",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "sideEffects": false,
  "browser": {
    "crypto": false
  },
  "scripts": {
    "prepare": "./prepare.sh",
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint:fix": "eslint --fix ./src/**/*.ts ./test/**/*.ts",
    "doc": "typedoc --entryPointStrategy expand ./src && open ./docs/index.html",
    "prepublishOnly": "npm test && npm run build"
  },
  "author": "Hituzi Ando",
  "repository": {
    "type": "git",
    "url": "git@github.com:HituziANDO/hituzi-misc.git"
  },
  "homepage": "https://github.com/HituziANDO/hituzi-misc",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "typedoc": "^0.25.11",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "eslint --fix"
    ],
    "./test/**/*.ts": [
      "eslint --fix"
    ]
  }
}
